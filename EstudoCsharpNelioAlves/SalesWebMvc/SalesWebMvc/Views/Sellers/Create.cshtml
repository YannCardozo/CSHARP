@model SalesWebMvc.Models.Seller
@{
    ViewData["Title"] = "Create";
    List<Seller> testando = new List<Seller>(); // Certifique-se de substituir isso pela sua lista de departamentos
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-sm-8 col-md-8 col-lg-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
@*            <div class="form-group">
                <label asp-for="Department.Id" class="control-label"></label>
                <input asp-for="Department.Id" class="form-control" />
            </div>*@
            <div class="form-group">
                <label asp-for="Department.Id" class="control-label"></label>
                <select asp-for="Department.Id" class="form-select" aria-label="Default select example">
                    <option selected disabled>Departamento</option>
                    <option value="1">Computers</option>
                    <option value="2">Electronics</option>
                    <option value="3">Fashion</option>
                    <option value="4">Books</option>
                </select>

            </div>
            <div class="form-group">
                <input class="btn btn-secondary mt-3" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>
